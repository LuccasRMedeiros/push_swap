export PUSHSWAP

CC = clang

FLAGS = -Wall -Werror -Wextra -g

DEPS = -L libs/libft/ -lft \

INC = -I ./libs/libft/ \

all: makelibft
	echo "$$PUSHSWAP"

clean:
	make -C ./libs/libft clean

makelibft:
	make -C ./libs/libft all
